<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="io.github.bbortt.eldoria.controller.MainViewController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Button text="%view.main.new-game" fx:id="startButton" onAction="#handleStartGame"/>
    <Button text="%view.main.load-game" fx:id="loadGameButton" visible="${controller.loadGamesAvailable}"
            managed="${controller.loadGamesAvailable}" onAction="#handleLoadGame"/>
    <Button text="%view.main.exit" fx:id="exitButton" onAction="#handleExitGame"/>
</VBox>
